{
  "name": "northrook/core-framework",
  "description": "Core framework functionality.",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin",
      "email": "mn@northrook.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Core\\": "src"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.3",
    "ext-zend-opcache": "*",
    "northrook/core": "dev-main",
    "northrook/core-symfony": "dev-main",
    "northrook/pathfinder": "dev-main",
    "symfony/framework-bundle": "@stable",
    "symfony/monolog-bundle": "@stable",
    "symfony/profiler-pack": "@stable",
    "symfony/debug-bundle": "@stable",
    "symfony/serializer": "^7.2",
    "northrook/view": "dev-main",
    "northrook/view-element": "dev-main",
    "northrook/view-document": "dev-main",
    "northrook/view-icons": "dev-main",
    "northrook/design-system": "dev-main",
    "northrook/view-components": "dev-main",
    "northrook/asset-manager": "dev-main",
    "northrook/toast-bundle": "dev-main",
    "northrook/view-image": "dev-main"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse"
  },
  "require-dev": {
    "northrook/dev": "dev-main"
  }
}
